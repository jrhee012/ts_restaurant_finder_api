<% for (let i = page.startIndex; i < page.endIndex; i++) { %>
<a href="/restaurants/<%= restaurants[i].source_data[0].ext_id %>" class="list-group-item list-group-item-action flex-column align-items-start">
    <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">
            <%= restaurants[i].name %><br></h5>
        <small>
            <%= restaurants[i].phone_number %></small>
    </div>
    <div class="d-flex w-100">
        <% let add = restaurants[i].display_address %>
        <% let fullAdd = "" %>
        <% for (let j = 0; j < add.length; j++) { %>
        <% fullAdd += add[j] %>
        <% if (j < add.length - 1) { %>
        <% fullAdd += ", " %>
        <% } %>
        <% } %>
        <p>
            <%= fullAdd %>
        </p>
    </div>
    <div class="d-flex w-100">
        <% let cat = restaurants[i].categories %>
        <% let fullCat = "" %>
        <% for (let j = 0; j < cat.length; j++) { %>
        <% fullCat += cat[j].title %>
        <% if (j < cat.length - 1) { %>
        <% fullCat += " | " %>
        <% } %>
        <% } %>
        <small>
            <%= fullCat %></small>
    </div>
</a>
<% } %>